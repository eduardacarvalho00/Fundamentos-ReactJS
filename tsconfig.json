{
  "compilerOptions": {                                
    "lib": ["dom", "DOM.Iterable", "ESNext"],                                        
    "jsx": "react-jsx",                                                               
    "moduleResolution": "node",                                      
    "resolveJsonModule": true,                       
    "allowJs": true,                                                                       
    "noEmit": true,                                           
    "isolatedModules": true,                          
    "esModuleInterop": true,                                                 
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                                   
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true                                
  },
  "include": ["src"]
}
